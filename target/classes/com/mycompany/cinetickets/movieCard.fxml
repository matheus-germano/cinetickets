      <GridPane fx:id="sessionsGrid" layoutX="137.0" layoutY="80.0" prefHeight="0.0" prefWidth="0.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
      </GridPane>
      <Label fx:id="movieRating" layoutX="159.0" layoutY="43.0" text="00 anos" />
